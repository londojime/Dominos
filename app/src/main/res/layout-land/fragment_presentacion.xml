<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        tools:context="mainactivity.santiagolondono.com.turismo_sopetran.activity_demografia">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#006491"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_margin="1sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/domino"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_height="fill_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15sp"
                    android:textColor="#FFFFFFFF"
                    android:text="@string/publicidad1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#FFFFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:text="@string/publicidad2"/>



            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:background="#006491">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/dom5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.3"
                android:orientation="horizontal"
                android:background="@drawable/d"
                android:layout_gravity="center_vertical"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Start"
                    android:gravity="center"
                    android:id="@+id/Bsedes"
                    android:textColor="#FFFFFFFF"
                    android:onClick="ir_sedes"
                    android:clickable="true"
                    android:textSize="35sp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/dom3"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>